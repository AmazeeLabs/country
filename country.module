<?php

/**
 * @file
 * Defines simple country field type.
 */

/**
 * Implements hook_help().
 */
function country_help($path, $arg) {
  switch ($path) {
    case 'admin/help#country':
      $output = '';
      $output .= '<h3>' . t('Country') . '</h3>';
      $output .= '<p>' . t('The Country module defines a simple country field type for the Field module. It provides 2 widgets - select options and autocomplete textfield - for this purpose.  See the <a href="@field-help">Field module help page</a> for more information about fields.', array('@field-help' => url('admin/help/field'))) . '</p>';
      return $output;
  }
}
